# Auto Content Generator - Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (Paid)
OPENAI_API_KEY=your_openai_key_here

# Free AI APIs (Choose one or more)
COHERE_API_KEY=your_cohere_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Image APIs (Free tiers available)
UNSPLASH_API_KEY=your_unsplash_key_here
PIXABAY_API_KEY=your_pixabay_key_here
PEXELS_API_KEY=your_pexels_key_here

# WordPress Configuration (Optional)
WORDPRESS_URL=https://yourdomain.com
WORDPRESS_USER=your_user
WORDPRESS_APP_PASSWORD=your_app_password

# Database Configuration
DATABASE_URL=sqlite:///./content_generator.db

# Redis Configuration (Optional - for Celery)
REDIS_URL=redis://localhost:6379

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Content Generation Settings
CONTENT_LENGTH=1500
MAX_IMAGES_PER_ARTICLE=3
LANGUAGE=id

# File Paths (Windows compatible)
OUTPUT_DIR=output
TEMPLATES_DIR=templates
STATIC_DIR=static

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Security
SECRET_KEY=your-secret-key-change-this
ALLOWED_HOSTS=*

# Free API Limits
COHERE_FREE_LIMIT=100
ANTHROPIC_FREE_LIMIT=100
HUGGINGFACE_FREE_LIMIT=100

# Image Generation Settings
IMAGE_WIDTH=800
IMAGE_HEIGHT=600
IMAGE_QUALITY=85

# Keyword Research Settings
MAX_KEYWORDS_PER_BATCH=50
RESEARCH_TIMEOUT=30

# Content Settings
MIN_CONTENT_LENGTH=500
MAX_CONTENT_LENGTH=3000

# E-E-A-T Settings
ENABLE_EEAT=True
EEAT_EXPERTISE_WEIGHT=0.3
EEAT_EXPERIENCE_WEIGHT=0.3
EEAT_AUTHORITY_WEIGHT=0.2
EEAT_TRUST_WEIGHT=0.2